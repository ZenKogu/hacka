head
  title Недвижимость

template(name="layout")
  +if NotEstatesRoute
    div.navbar.navbar-default(style='width:100%; height:70px; z-index:1020;')

  a.navbar-brand(href='/estates' style='left:0px; top:0px; z-index:1030; position:absolute')
    img(style='height:40px' src='data:image/svg+xml;base64,')

  ul(style='right:10px; top:0px; z-index:1030; position:absolute').nav.navbar-nav.navbar-right
    li
      +if isUser
        a(href='/user/{{userId}}' style='padding:0px;padding-top:10px;padding-right:25px; text-align:right') {{userEmail}}     
        a.logout(href='#' style='padding:0px;padding-right:25px; text-align:right') Выйти     
      else 
        a(href='/login' style='padding:0px;padding-top:20px;padding-right:25px; text-align:right') Войти
  +yield


template(name="Login")
  div(class="container login_form")
    form(id="login_form" class="account-form" role="form")
      h2
        | Вход в систему
      +if errorMessage
        div(class="alert alert-warning")
          | {{errorMessage}}
      div(id="login-with-password" style="padding-top: 10px;")
        input(id="login_email" type="text" class="form-control" placeholder="Email" required autofocus)
        input(id="login_password" type="password" class="form-control" placeholder="Пароль" required)
        button(class="btn btn-lg btn-primary btn-block" type="submit" data-loading-text="Пожалуйста, подождите...")
          | Войти     


template(name = 'userDetails')

  .container
    h2 {{userEmail}}
      small Профиль пользователя
    br
    h4 Пока не реализовано


template(name="Logout")

template(name="loading")
  .microtemplate-wrapper
    .container.microtemplate-message
      h2 Загрузка.
        br
        small Пожалуйста, подождите
        i.fa.fa-circle-o-notch.fa-spin
        +backButton

template(name="accessDenied")
  .microtemplate-wrapper
    .container.microtemplate-message
      h2 Нет доступа
        +backButton

template(name="docEditing")
  .microtemplate-wrapper
    .container.microtemplate-message
      h2 Ресурс редактируется
        br
        small Ресурс в данный момент редактируется другим пользователем. Пожалуйста, подождите, или повторите попытку позднее.
        +backButton

template(name="notFound")
  .microtemplate-wrapper
    .microtemplate-message
      h2 Страница не найдена
        +backButton

template(name="editingOtherResource")
  .microtemplate-wrapper
    .container.microtemplate-message
      h2 Вы уже редактируете другой ресурс
        br
        small Перед началом редактирования данного ресурса необходимо закончить редактирование другого ресурса.
        +backButton  

template(name = 'backButton')
    br
    button.btn.btn-default.back-button(onclick = 'history.back()')
      | Вернуться назад
